package com.gfo.gfo_meesterproef.Admin;

import android.app.AlertDialog;
import android.content.Intent;
import android.content.SharedPreferences;
import android.net.Uri;
import android.support.v7.app.AppCompatActivity;
import android.os.Bundle;

import com.gfo.gfo_meesterproef.R;

import java.util.ArrayList;
import java.util.List;
import java.util.concurrent.ExecutionException;

import static android.R.attr.password;
import static com.gfo.gfo_meesterproef.Admin.ViewFileActivity.fileContext;
import static com.gfo.gfo_meesterproef.Admin.ViewGroupActivity.groupContext;

public class OpenFileActivity extends AppCompatActivity {

    AlertDialog alertDialog;

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_open_file);

        //        get selected group from ViewGroupActivity
        SharedPreferences clickedFilePref = getSharedPreferences("clickedFilePreference", fileContext.MODE_PRIVATE);
        String clickedFile = clickedFilePref.getString("clickedFile", "");

        //contact database for products
        String type = "view";
        String url = null;
        try{
            url = new OpenFileBackgroundworker(this).execute(type, clickedFile).get();
            } catch (InterruptedException e) {
                e.printStackTrace();
            } catch (ExecutionException e) {
                e.printStackTrace(); }

        alertDialog = new AlertDialog.Builder(this).create();
        alertDialog.setMessage(url);
        alertDialog.show();
//
//        Intent web = new Intent(Intent.ACTION_VIEW);
//        web.setData(Uri.parse(url));
//        startActivity(web);

        }
}
